{% extends 'Authentification.html.twig' %}


{% block title %}Hello AuthentificationController!{% endblock %}

{% block body %}
{% if app.user %}
    
{% else %}
<div class="splash-container">
        <div class="card ">
            {%if error %}
                <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'authentification') }}
                </div>
            {% endif %}
            <div class="card-header text-center"><a href="">Authentification</a><span class="splash-description"></span></div>
            <div class="card-body">
                <form action="{{path('authentification')}}" method="post">
                    <div class="form-group">
                        <label for="inputText3" class="col-form-label">Nom d'utilisateur</label>
                        <input class="form-control form-control-lg" type="text" name="_username" required="" value="{{last_username}}"> 
                    </div>
                    <div class="form-group">
                        <label for="inputText3" class="col-form-label">Mot de passe</label>
                        <input class="form-control form-control-lg" type="password" name="_password" required="" > 
                    </div>
                    <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}"/>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Connexion</button>
                </form>
            </div>
            <div class="card-footer bg-white p-0  ">
                <div class="card-footer-item card-footer-item-bordered">
                    <a href="{{path('inscription')}}" class="footer-link">S'inscrire</a></div>
                <div class="card-footer-item card-footer-item-bordered">
                    <a href="#" class="footer-link">Forgot Password</a>
                </div>
            </div>
        </div>
    </div>
{%  endif %}
{% endblock %}
