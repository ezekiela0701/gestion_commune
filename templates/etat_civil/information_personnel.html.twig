{% extends 'base.html.twig' %}

{% block body %}

<div class="card">
    <div class="card-header">
        Information personnel
    </div>
    <div class="card-body">
        <div class="card">
            <!-- <div class="card-header">
                Card Header
            </div> -->
            {% for info in Information_personnel %}
            <div class="card-body">
                <!-- <p class="card-text">Quisque faucibus, massa non consectetur lacininulla varius nisl, quis ornare diam nulla quis odio.</p> -->
                
                    <div class="row">
                        <div class="col-lg-6 col-md-6">
                            <p> Nom : {{info.Nom}}</p>
                            <p>Date de Naissance : {{info.DateNaissance |date('d-m-Y')}}</p>
                        </div>

                        <div class="col-lg-6 col-md-6">
                            <p>Prénom : {{info.Prenom}}</p>
                            <p>Lieu de naissance: {{info.LieuNaissance}}</p>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 col-12">
                            <div class="card">
                                <div class="card-body">
                                    <h3 class="card-title border-bottom pb-2"><center>Père</center> </h3>
                                    <p class="card-text">Nom : {{info.NomPere}}</p>
                                    <p class="card-text">Date de naissance : {{info.DateNaissancePere |date('d-m-Y') }}</p>
                                    <p class="card-text">Lieu de naissance : {{info.LieuNaissancePere}}</p>
                                    <p class="card-text">Profession : {{info.ProfessionPere}}</p>
                                    <p class="card-text">Adresse : {{info.AdressePere}}</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 col-12">
                            <div class="card">
                                <div class="card-body">
                                    <h3 class="card-title border-bottom pb-2"><center>Mère</center> </h3>
                                    <p class="card-text">Nom : {{info.NomMere}}</p>
                                    <p class="card-text">Date de naissance : {{info.DateNaissanceMere |date('d-m-Y')}}</p>
                                    <p class="card-text">Lieu de naissance : {{info.LieuNaissanceMere}}</p>
                                    <p class="card-text">Profression : {{info.ProfessionMere}}</p>
                                    <p class="card-text">Adresse : {{info.AdresseMere}}</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 col-12">
                            <div class="card">
                                <div class="card-body">
                                    <h3 class="card-title border-bottom pb-2"><center>Témoin</center> </h3>
                                    <p class="card-text">Nom : {{info.NomFaitPar}}</p>
                                    <p class="card-text">Date de naissance : {{info.DateNaissanceFaitPar |date('d-m-Y')}}</p>
                                    <p class="card-text">Lieu de naissance : {{info.LieuNaissanceFaitPar}}</p>
                                    <p class="card-text">Profression : {{info.ProfessionFaitPar}}</p>
                                    <p class="card-text">Adresse : {{info.AdresseFaitPar}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                
            </div>
            <div class="card-footer d-flex text-muted">
                <div class="row">
                <div class="col-lg-12 col-md-12">
                
                    <div class="card-footer-item card-footer-item-bordered"><a href="#" class="btn btn-info btn-block">Acte d'etat civil</a></div>
                    <div class="card-footer-item card-footer-item-bordered"><a href="#" class="btn btn-secondary btn-block">Bulletin de <br>Naissance </a></div>
                    <div class="card-footer-item card-footer-item-bordered"><a href="#" class="btn btn-brand btn-block">Carte d'identite <br>National</a></div>
                
                    <div class="card-footer-item card-footer-item-bordered"><a href="{{path('modifier_information' , {'id' : info.id })}}"  class="btn btn-success btn-block">Modifier</a></div>
                    <div class="card-footer-item card-footer-item-bordered"><a href="{{path('supprimer_personnel' , {'id' : info.id } )}}" Onclick="return confirm('Voulez vous supprimer cette personne?')" class="btn btn-danger btn-block">Supprimer</a></div>
                
                </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}